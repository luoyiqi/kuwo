<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="kuwo_alert_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="kuwo_toast_animation" parent="@android:style/Animation.Toast">
        <item name="android:windowEnterAnimation">@anim/kuwo_toast_fade_in</item>
        <item name="android:windowExitAnimation">@anim/kuwo_toast_fade_out</item>
    </style>
    <style name="Theme.NewActivity" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>
    <style name="CustomCirclePageIndicator">
        <item name="centered">true</item>
        <item name="fillColor">#ff888888</item>
        <item name="radius">10.0dip</item>
        <item name="strokeColor">#ff000000</item>
        <item name="strokeWidth">2.0dip</item>
    </style>
    <style name="logreg_btn_white">
        <item name="android:textSize">@dimen/local_main_textsize</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="logreg_btn_black">
        <item name="android:textSize">@dimen/local_main_textsize</item>
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="logreg_btn_time_calculate">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="ProtocolDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="kuwo_setting_item">
        <item name="android:background">@drawable/bg_setting_item</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Theme.PachiraTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
